{
  "compilerOptions": {
   "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["dom", "es6"],
    "typeRoots": ["./node_modules/@types/"],
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
